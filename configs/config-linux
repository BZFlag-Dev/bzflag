#
# configuration for generic linux
#
CONFIG	= linux

#
# use XF86 vidmode extension (comment out to disable)
#
XF86VIDMODE_DEF = -DXF86VIDMODE_EXT
XF86VIDMODE_LIB = -lXxf86vm

#
# use XInput extension for joystick support (comment out to disable)
#
JOYSTICK_DEF = -DXIJOYSTICK
JOYSTICK_LIB = -lXi

#
# accumulate extension definitions and libs
#
XEXT_DEF = $(XF86VIDMODE_DEF) $(JOYSTICK_DEF)
XEXT_LIB = $(XF86VIDMODE_LIB) $(JOYSTICK_LIB)

#
# install locations
#
INSTALL_DATA_DIR = /usr/share/bzflag

#
# tools
#
AR	= /usr/bin/ar cru
CC	= /usr/bin/gcc
CXX	= /usr/bin/g++
CD	= cd
CP	= /bin/cp
LD	= /usr/bin/ld
MKDIR	= /bin/mkdir -p
NROFF	= /usr/bin/nroff
RM	= /bin/rm -f
RMR	= $(RM) -r
SHELL	= /bin/sh
ECHO	= echo

#
# compiler definitions
#
PCDEFS   = -D_BSD_SOURCE -D_POSIX_SOURCE -D_ISOC99_SOURCE -DHALF_RATE_AUDIO $(XEXT_DEF)
PCXXDEFS = -D_BSD_SOURCE -D_POSIX_SOURCE -D_ISOC99_SOURCE -DHALF_RATE_AUDIO $(XEXT_DEF)

#
# compiler options
#
PCOPTS   = -Wall -W -ansi $(ACOPTS)
PCXXOPTS = -Wall -W $(ACXXOPTS)
COPT     = -DNDEBUG -O2
CXXOPT   = -DNDEBUG -O2 -ffast-math -fexpensive-optimizations
#CDEBUG   = -DDEBUG -g -Werror
#CXXDEBUG = -DDEBUG -g -Werror
CDEBUG   = -DDEBUG -g
CXXDEBUG = -DDEBUG -g
CWOFF    =
CXXWOFF  =

#
# dependency generation stuff
#
MKDEP     = $(DEPTH)/tools/depconv
MKDEPOPT  = -MD
MKDEPPRE  =
MKDEPPOST = $(MKDEP) -f $(MKDEPFILE) $*.d; $(RM) $*.d
MKDEPFILE = .depend

#
# search paths
#
PCINCS   = -I/usr/include -I/usr/X11R6/include
PCXXINCS = -I/usr/include -I/usr/X11R6/include

#
# linker options
#
PLDOPTS  = -L/usr/X11R6/lib

#
# dirt
#
PDIRT    = *.[deou] a.out core ar.tmp.*

#
# libraries
#
AUDIO_LIBS =				\
	$(NULL)

DISPLAY_LIBS =				\
	$(NULL)

GL_LIBS =				\
	-lGLU				\
	-lGL				\
	$(NULL)

IMAGE_LIBS =				\
	$(NULL)

NETWORK_LIBS =				\
	$(NULL)

WINDOW_LIBS =				\
	$(XEXT_LIB)			\
	-lXext				\
	-lX11				\
	$(NULL)

# load dependencies
sinclude $(MKDEPFILE)
