# TextTool Batch processing file for BZFlag's fonts

group
  font Luxi Mono
  flags none
  sizes 6 8 12 16 32
  minaasize 16
  filename LuxiMono_$s
end

group
  font Toga Sans
  flags bold
  sizes 6 8 12 16 32
  minaasize 0
  filename TogaSansBold_$s
end

group
  font Toga Serif
  flags bold
  sizes 12 16 32
  minaasize 0
  filename TogaSerifBold_$s
end

group
  font Bitstream Vera Sans Mono
  flags bold
  sizes 6 8 12 16
  minaasize 16
  filename VeraMonoBold_$s
end

