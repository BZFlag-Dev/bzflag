	<blending src="sa" dst="1-sa" />
	<geometry>
		<texcoord>
			0 0
			0 1
			1 0
			1 1
		</texcoord>
		<gstate>
			<texture filename="droplet" />
			<particlesystem>
				<quota>3000</quota>
