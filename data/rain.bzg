				<emitter type="box">
					<position>0 0 4</position>
					<rate>250</rate>
					<timetolive>1</timetolive>
					<direction>0 0 -5</direction>
					<velocity>1</velocity>
					<angle>0</angle>
					<color>1 1 1 1</color>
					<size>8.0 8.0 0.125</size>
				</emitter>
			</particlesystem>
		</gstate>
	</geometry>
</gstate>
