<gstate>
	<blending src="sa" dst="1-sa" />
	<geometry>
		<texcoord>
			0 0
			0 1
			1 0
			1 1
		</texcoord>
		<gstate>
			<texture filename="droplet" />
			<particlesystem>
				<quota>10000</quota>
				<width>0.03</width>
				<height>0.2</height>

				<affector type="linearforce">
					<force>0 0 -4</force>
					<application method="add"/>
				</affector>
				<emitter type="box">
					<position>0 0 5</position>
					<rate>100</rate>
					<timetolive>5</timetolive>
					<direction>-0.1 0 0</direction>
					<velocity>1</velocity>
					<angle>0</angle>
					<color>1 1 1 1</color>
					<size>3.0 3.0 0.25</size>
				</emitter>
			</particlesystem>
		</gstate>
	</geometry>
</gstate>
