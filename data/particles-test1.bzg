<gstate>
	<particlesystem>
		<quota>10000</quota>
		<width>0.1</width>
		<height>0.2</height>

		<affector type="linearforce">
			<force>0 0 -4</force>
			<application method="add"/>
		</affector>
		<emitter type="box">
			<position>0 0 5</position>
			<rate>200</rate>
			<timetolive>5</timetolive>
			<direction>0 -0.5 -1</direction>
			<velocity>1</velocity>
			<angle>0</angle>
			<color>1 1 1 1</color>
			<size>3.0 3.0 0.25</size>
		</emitter>
	</particlesystem>
</gstate>
