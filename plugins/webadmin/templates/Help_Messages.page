[!header.tmpl]
[?IF Editing]
  <h2>Editing helpmsg: [$HelpMsgName]</h2>
  
  <form id="helpmsg_edit" action="[$BaseURL][$CurrentPage]" method="post">
    <input type="hidden" name="name" value="[$HelpMsgName]">
    <textarea name="helptext">[$HelpMsgBody]</textarea>
    <input type="submit" value="save">
  </form>
[?ELSE Editing]
  <h2>Help messages</h2>
  
  <form id="helpmsg_delete" action="[$BaseURL][$CurrentPage]" method="post">
    <ul>
[*START HelpMsgs]
      <li><input type="checkbox" name="delmsg"
                 id="help_[$HelpMsgName]" value="[$HelpMsgName]">
        <label for="help_[$HelpMsgName]">[$HelpMsgName]</label>
        <a class="edit" href="?name=[$HelpMsgName]">edit</a></li>
[*END HelpMsgs]
[*EMPTY HelpMsgs]
    </ul>
    <input type="submit" value="delete">
  </form>
  
  <form id="helpmsg_new" action="[$BaseURL][$CurrentPage]" method="get">
    <input type="text" name="name">
    <input type="submit" value="new">
  </form>
[?END Editing]
[!footer.tmpl]
