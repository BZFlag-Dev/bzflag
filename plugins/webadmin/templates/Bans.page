[!header.tmpl]
  <h2>editing banlist</h2>
  
  <form id="banlist_edit" action="[$BaseURL][$CurrentPage]" method="post">
    <h3>ip-banlist</h3>
    <ul id="ipbanlist">
[*START IPBanList]
      <li><input type="checkbox" id="ipban_[$BannedUser]"
                 name="delip" value="[$BannedUser]">
        <label for="ban_[$BannedUser]">[$BannedUser]</label></li>
[*END IPBanList]
[*EMPTY IPBanList]
    </ul>
    
    <h3>id-banlist</h3>
    <ul id="idbanlist">
[*START IDBanList]
      <li><input type="checkbox" id="idban_[$BannedUser]"
                 name="delid" value="[$BannedUser]">
        <label for="idban_[$BannedUser]">[$BannedUser]</label></li>
[*END IDBanList]
[*EMPTY IDBanList]
    </ul>
    
    <input type="submit" value="remove">
  </form>
</body>
</html>
